{
  "name": "open-joystick-display-server",
  "version": "1.0.0",
  "description": "Joystick server that interfaces with Open Joystick Display",
  "author": "Anthony 'Dragoni' Mattera",
  "main": "app/js/electron.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "open-joystick-display-server",
    "productName": "Open Joystick Display Server",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "icon": "./app/icons/icon.png",
      "target": "dir",
      "category": "Multimedia"
    },
    "win": {
      "icon": "./app/icons/icon.ico",
      "target": "dir"
    },
    "mac": {
      "icon": "./app/icons/icon.icns",
      "target": "dmg"
    }
  },
  "dependencies": {
    "clone": "^2.1.2",
    "electron-store": "^2.0.0",
    "original-fs": "^1.0.0"
  },
  "devDependencies": {
    "clone": "^2.1.2",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.4",
    "electron-rebuild": "^1.8.4",
    "electron-store": "^2.0.0",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.0.0",
    "gulp-connect": "^5.7.0",
    "gulp-less": "^4.0.1",
    "gulp-minify": "^3.1.0",
    "less": "^3.9.0",
    "node-watch": "^0.6.0",
    "stream-combiner2": "^1.1.1"
  }
}
